    <% @prices.each do |price| %>
      <div class="module">
        <%= price[:unit_amount] %> cents
        per <%= price[:recurring][:interval] %>
        <%= button_to "Purchase", stripe_checkout_user_path(price_id: price.id), data: {turbo: false} %>
        <%# <form action="/create-portal-session" method="POST">
          <input type="hidden" id="session-id" name="session_id" value="" />
          <button id="checkout-and-portal-button" type="submit">Manage your billing information</button>
        </form> %>
      </div>
    <% end %>
  </div>
<% end %>

<%= content_for :additional_content do %>
  <%= render "shared/login_items" %>
<% end %>