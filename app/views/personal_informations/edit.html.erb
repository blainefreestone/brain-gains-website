<%= content_for :header_title do %>
  Update <em>Personal Information</em>
<% end %>

<%= content_for :header_right_module do %>

<% end %>

<%= content_for :main_content do %>
  <%= form_with model: @personal_information, url: user_personal_information_path, class: "modular" do |form| %>
    <div class="module">
      <div class="field">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, autofocus: true %>
      </div>
      <div class="field">
        <%= form.label :last_name %>
        <%= form.text_field :last_name %>
      </div>
      <div class="field">
        <%= form.label :phone_number %>
        <%= form.text_field :phone_number %>
      </div>
      <%# <div class="field"> %>
        <%#= form.label :grade %>
        <%#= form.select :grade, @grades %>
      <%# </div> %>
    </div>
    <div class="module">
      <div class="field">
        <%= form.label :street_address %>
        <%= form.text_field :street_address %>
      </div>
      <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city %>
      </div>
      <div class="field">
        <%= form.label :zipcode %>
        <%= form.text_field :zipcode %>
      </div>
        <div class="actions" style="display: flex; flex-direction: column;">
        <%= form.submit "Update", class: "button", style: "align-self: center;" %>
      </div>
    </div>
  <% end %>
<% end %>

<%= content_for :additional_content do %>
  <%= link_to 'Back', :back %>
<% end %>